<div class="card h-100 shadow-sm">
  <div class="card-body">
    <div class="d-flex align-items-center mb-3">
      <div class="me-3">
        <%= user_avatar(width: 60, height: 60) %>
      </div>
      <div class="flex-grow-1">
        <h5 class="card-title mb-1"><%= user.full_name %></h5>
        <small class="text-warning fw-bold"><%= user.batch_count_sentence %></small>
      </div>
    </div>

    <div class="mb-3">
      <%= content_tag(:span, t("#{user.role}"), class: "badge #{badge_role[:bg_class]} me-2") %>
      <%= content_tag(:span, badge_available[:text], class: "badge #{badge_available[:bg_class]}") %>
    </div>

    <% if user.prefered_topic.present? %>
      <div class="mb-3">
        <small class="text-info">
          <i class="fas fa-star me-1"></i><%= user.prefered_topic %>
        </small>
      </div>
    <% end %>

    <div class="row text-center mb-3">
      <div class="col-6">
        <div class="fw-bold text-primary"><%= user.tickets_solved_count %></div>
        <small class="text-muted">Tickets</small>
      </div>
      <div class="col-6">
        <div class="fw-bold text-success"><%= user.lessons_count %></div>
        <small class="text-muted">Cours</small>
      </div>
    </div>

    <div class="d-grid">
      <%= actions %>
    </div>
  </div>
</div>
