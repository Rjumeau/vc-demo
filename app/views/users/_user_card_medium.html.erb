<div class="card shadow-sm">
  <div class="card-body">
    <div class="row">
      <div class="col-md-3 text-center">
        <%= image_tag user.image_url_displayed,
            alt: user.full_name,
            class: "rounded-circle object-fit-cover",
            width: 120,
            height: 120
        %>
      </div>

      <div class="col-md-9">
        <h3 class="mb-1"><%= user.full_name %></h3>
        <p class="text-muted mb-1"><%= user.email %></p>
        <% if user.prefered_topic.present? %>
          <p class="text-info mb-3">
            <i class="fas fa-star me-1"></i>Spécialité : <%= user.prefered_topic %>
          </p>
        <% end %>

        <div class="mb-3">
          <% if user.teacher_assistant? %>
            <span class="badge bg-secondary me-2">TA</span>
          <% else %>
            <span class="badge bg-primary me-2">Teacher</span>
          <% end %>

          <% if user.available? %>
            <span class="badge bg-success">
              <i class="fas fa-circle"></i> Disponible
            </span>
          <% else %>
            <span class="badge bg-danger">
              <i class="fas fa-circle"></i> Non disponible
            </span>
          <% end %>
        </div>

        <div class="row mb-3">
          <div class="col-4">
            <p class="small text-muted">Tickets résolus</p>
            <p class="fw-bold text-primary"><%= user.tickets_solved_count %></p>
          </div>
          <div class="col-4">
            <p class="small text-muted">Cours donnés</p>
            <p class="fw-bold text-success"><%= user.lessons_count %></p>
          </div>
          <div class="col-4">
            <p class="small text-muted">Batch</p>
            <p class="fw-bold text-warning"><%= user.batch_count_sentence %></p>
          </div>
        </div>

        <div class="d-flex gap-2">
          <%= link_to "Envoyer un contrat", "#",
              class: "btn btn-outline-primary btn-sm" %>
          <%= link_to "Voir le calendrier", "#",
              class: "btn btn-outline-secondary btn-sm" %>
        </div>
      </div>
    </div>
  </div>
</div>
